<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Project</title>
    <!-- Bootstrap CSS (CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body { padding-top: 70px; }
        .nav-user { color: #fff; margin-right: 10px; }
    </style>
</head>
<body>
    @{ var sessionRole = Context.Session.GetString("Role"); var sessionName = Context.Session.GetString("StudentName") ?? Context.Session.GetString("TeacherName"); var teacherId = Context.Session.GetInt32("TeacherId"); var studentId = Context.Session.GetInt32("StudentId"); }

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Attendance App</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="#navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    @if (string.IsNullOrEmpty(sessionRole))
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                    }
                    else
                    {
                        // Role-specific navigation: show a single useful link per role
                        if (sessionRole == "Admin")
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Dashboard">Dashboard</a></li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">Manage</a>
                                <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="Batches">Batches</a></li>
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="Sections">Sections</a></li>
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="Courses">Courses</a></li>
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="Classes">Classes</a></li>
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="Students">Students</a></li>
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="Teachers">Teachers</a></li>
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="TimeTables">TimeTables</a></li>
                                </ul>
                            </li>
                        }
                        else if (sessionRole == "Teacher")
                        {
                            // Show a single My Classes link and pass teacher id from session
                            <li class="nav-item"><a class="nav-link" asp-controller="Teacher" asp-action="Dashboard" asp-route-id="@teacherId">My Classes</a></li>
                        }
                        else if (sessionRole == "Student")
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Student" asp-action="Dashboard" asp-route-id="@studentId">Dashboard</a></li>
                        }
                    }
                </ul>

                <ul class="navbar-nav ms-auto">
                    @{
                        if (!string.IsNullOrEmpty(sessionName))
                        {
                            <li class="nav-item d-flex align-items-center me-2">
                                <span class="nav-user">@sessionName (@sessionRole)</span>
                            </li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Logout">Logout</a></li>
                        }
                        else
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Login">Login</a></li>
                        }
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-4">
        <div class="container">
            &copy; 2024 - Project
        </div>
    </footer>

    <!-- jQuery and Bootstrap JS (CDN) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
