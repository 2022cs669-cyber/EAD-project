@model Project.Models.Teacher

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Teacher Dashboard</title>
</head>
<body>
    <h1>Welcome, @Model.Name</h1>
    <p><a href="@Url.Action("Logout", "Account")">Logout</a></p>
    <h2>Your Classes</h2>
    <ul>
        @foreach (var c in Model.Classes ?? new List<Project.Models.Class>())
        {
            <li>@c.ClassName - <a href="@Url.Action("Attendance", "Teacher", new { classId = c.Id })">Attendance</a></li>
        }
    </ul>
</body>
</html>