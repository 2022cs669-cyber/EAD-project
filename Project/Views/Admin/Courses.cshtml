@model List<Project.Models.Course>

<div class="d-flex justify-content-between align-items-center">
    <h1>Courses</h1>
    <a class="btn btn-success" href="@Url.Action("CreateCourse")">Create New Course</a>
</div>

<table class="table table-striped mt-3">
    <thead><tr><th>Id</th><th>Title</th><th>Code</th><th>Actions</th></tr></thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Id</td>
                <td>@c.Title</td>
                <td>@c.Code</td>
                <td>
                    <a class="btn btn-sm btn-primary" href="@Url.Action("EditCourse", new { id = c.Id })">Edit</a>
                    <form method="post" asp-action="DeleteCourse" style="display:inline">
                        <input type="hidden" name="id" value="@c.Id" />
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>