@model List<Project.Models.Section>

<div class="d-flex justify-content-between align-items-center">
    <h1>Sections</h1>
    <a class="btn btn-success" href="@Url.Action("CreateSection")">Create New Section</a>
</div>

<table class="table table-striped mt-3">
    <thead><tr><th>Id</th><th>Name</th><th>Batch</th><th>Students</th><th>Actions</th></tr></thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Id</td>
                <td>@s.Name</td>
                <td>@s.Batch?.Name</td>
                <td>@(s.Students != null ? s.Students.Count.ToString() : "0")</td>
                <td>
                    <a class="btn btn-sm btn-primary" href="@Url.Action("EditSection", new { id = s.Id })">Edit</a>
                    <form method="post" asp-action="DeleteSection" style="display:inline">
                        <input type="hidden" name="id" value="@s.Id" />
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>