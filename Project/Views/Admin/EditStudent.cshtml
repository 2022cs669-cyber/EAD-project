@model Project.Models.Student

<h1>Edit Student</h1>
<form method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="form-group">
        <label>Name</label>
        <input class="form-control" name="Name" value="@Model.Name" />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input class="form-control" name="Email" value="@Model.Email" />
    </div>
    <div class="form-group">
        <label>Password</label>
        <input class="form-control" name="Password" value="@Model.Password" />
    </div>
    <div class="form-group">
        <label>Section</label>
        <select class="form-control" name="SectionId">
            @foreach (var sec in ViewBag.Sections as List<Project.Models.Section>)
            {
                if (sec.Id == Model.SectionId)
                {
                    <option value="@sec.Id" selected>@sec.Batch.Name - @sec.Name</option>
                }
                else
                {
                    <option value="@sec.Id">@sec.Batch.Name - @sec.Name</option>
                }
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>