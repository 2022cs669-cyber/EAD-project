@model List<Project.Models.Class>

<div class="d-flex justify-content-between align-items-center">
    <h1>Classes</h1>
    <a class="btn btn-success" href="@Url.Action("CreateClass")">Create New Class</a>
</div>

<table class="table table-striped mt-3">
    <thead><tr><th>Id</th><th>Name</th><th>Teacher</th><th>Actions</th></tr></thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Id</td>
                <td>@c.ClassName</td>
                <td>@c.Teacher?.Name</td>
                <td>
                    <a class="btn btn-sm btn-primary" href="@Url.Action("EditClass", new { id = c.Id })">Edit</a>
                    <form method="post" asp-action="DeleteClass" style="display:inline">
                        <input type="hidden" name="id" value="@c.Id" />
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>