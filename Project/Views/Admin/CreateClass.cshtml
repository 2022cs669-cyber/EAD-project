@model Project.Models.Class

@{
    var teachers = ViewBag.Teachers as List<Project.Models.Teacher> ?? new List<Project.Models.Teacher>();
    var modelErrors = TempData["ModelErrors"] as string;
}

<h1>Create Class</h1>

@if (!string.IsNullOrEmpty(modelErrors))
{
    <div class="alert alert-warning">@modelErrors</div>
}

<form asp-action="CreateClass" asp-controller="Admin" method="post">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="mb-3">
        <label class="form-label">Class Name</label>
        <input asp-for="ClassName" class="form-control" />
        <span asp-validation-for="ClassName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Teacher</label>
        <select asp-for="TeacherId" class="form-control">
            <option value="">-- Select teacher --</option>
            @foreach (var t in teachers)
            {
                <option value="@t.Id" selected="@(Model != null && Model.TeacherId == t.Id ? "selected" : null)">@t.Name</option>
            }
        </select>
        <span asp-validation-for="TeacherId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Num Students</label>
        <input asp-for="NumStudents" class="form-control" />
        <span asp-validation-for="NumStudents" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

@if (Model != null)
{
    <div class="mt-3">
        <h5>Posted values (debug)</h5>
        <ul>
            <li>ClassName: @Model.ClassName</li>
            <li>TeacherId: @Model.TeacherId</li>
            <li>NumStudents: @Model.NumStudents</li>
        </ul>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}