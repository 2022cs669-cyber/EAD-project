@model List<Project.Models.Student>

<div class="d-flex justify-content-between align-items-center">
    <h1>Students</h1>
    <a class="btn btn-success" href="@Url.Action("CreateStudent")">Create New Student</a>
</div>

<table class="table table-striped mt-3">
    <thead><tr><th>Id</th><th>Name</th><th>Email</th><th>Section</th><th>Actions</th></tr></thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Id</td>
                <td>@s.Name</td>
                <td>@s.Email</td>
                <td>@s.Section?.Batch?.Name - @s.Section?.Name</td>
                <td>
                    <a class="btn btn-sm btn-primary" href="@Url.Action("EditStudent", new { id = s.Id })">Edit</a>
                    <form method="post" asp-action="DeleteStudent" style="display:inline">
                        <input type="hidden" name="id" value="@s.Id" />
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>