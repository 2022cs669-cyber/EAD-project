@{
    ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center align-items-center" style="min-height:70vh;">
    <div class="card" style="width:420px;">
        <div class="card-body">
            <h3 class="card-title text-center">Attendance Sheet</h3>
            <p class="text-center text-muted">Login to continue</p>

            <div id="error-message" class="text-danger mb-2"></div>

            <form id="loginForm" method="post" action="/Account/Login">
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" id="email" name="email" class="form-control" placeholder="Enter your email" required />
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" id="password" name="password" class="form-control" placeholder="Enter your password" required />
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
            </form>

            <div class="mt-3 text-center">
                <a href="/Account/SignUp">Don't have an account? Sign Up</a>
            </div>

            <div class="mt-2 text-center">
                <a id="forgot-link" href="/Account/ForgotPassword" style="display:none;">Forgot password?</a>
                <noscript><a href="/Account/ForgotPassword">Forgot password?</a></noscript>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#loginForm').submit(function (e) {
                e.preventDefault();

                var email = $('#email').val();
                var password = $('#password').val();
                $('#error-message').text('');
                $('#forgot-link').hide();

                if (!email || !password) {
                    $('#error-message').text('Both email and password are required.');
                    $('#forgot-link').show();
                    return;
                }

                $.ajax({
                    type: 'POST',
                    url: '/Account/Login',
                    data: { email: email, password: password },
                    success: function (response) {
                        if (response.success) {
                            window.location.href = response.redirectUrl || '/Student/Dashboard';
                        } else {
                            $('#error-message').text(response.errorMessage || 'Invalid credentials.');
                            // Show forgot password link on failed login
                            $('#forgot-link').show();
                        }
                    },
                    error: function () {
                        $('#error-message').text('An error occurred while processing your request.');
                        $('#forgot-link').show();
                    }
                });
            });
        });
    </script>
}
